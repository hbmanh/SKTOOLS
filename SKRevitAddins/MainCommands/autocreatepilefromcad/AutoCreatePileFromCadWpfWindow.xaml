<Window x:Class="SKRevitAddins.AutoCreatePileFromCad.AutoCreatePileFromCadWpfWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        Width="350" Height="250"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Title="Auto Create Pile From Acad"
        Topmost="true"
        mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ***** Hàng 0: Logo + dòng chữ Shinken Group® ***** -->
        <StackPanel Grid.Row="0"
                    Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    Margin="10,5,10,5">
            <!-- Logo -->
            <Image x:Name="LogoImage"
                   Width="30" Height="30"
                   Stretch="UniformToFill"
                   Margin="0,0,5,0"/>
            <!-- TextBlock -->
            <TextBlock Text="Shinken Group®"
                       VerticalAlignment="Center"
                       Foreground="Black"
                       FontWeight="Bold"
                       FontSize="12"/>
        </StackPanel>

        <!-- ***** Hàng 2: GroupBox (pile layer, type, level, offset) ***** -->
        <GroupBox x:Name="groupB"
                  Grid.Row="2"
                  Margin="10,5,10,5">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="5">
                    <TextBlock>Layer of pile :</TextBlock>
                    <ComboBox Name="bycate"
                              Width="150"
                              Margin="10,0,0,0"
                              ItemsSource="{Binding AllLayers}"
                              SelectedItem="{Binding SelectedLayer}"
                              IsEditable="True"
                              IsTextSearchEnabled="True"/>
                </StackPanel>
                <StackPanel x:Name="pnamegroup"
                            Orientation="Horizontal"
                            Margin="5">
                    <TextBlock Margin="40,0,0,0"
                               Width="30">Type :</TextBlock>
                    <ComboBox Name="byparams"
                              Width="150"
                              Margin="10,0,0,0"
                              ItemsSource="{Binding PileType}"
                              SelectedItem="{Binding SelectedPileType}"
                              IsEditable="True"
                              IsTextSearchEnabled="True"
                              DisplayMemberPath="Name"/>
                </StackPanel>
                <StackPanel x:Name="prulegroup"
                            Orientation="Horizontal"
                            Margin="5">
                    <TextBlock Margin="37,0,0,0"
                               Width="40">Level :</TextBlock>
                    <ComboBox Name="rule"
                              Width="150"
                              Margin="3,0,0,0"
                              ItemsSource="{Binding AllLevel}"
                              SelectedItem="{Binding SelectedLevel}"
                              DisplayMemberPath="Name"/>
                </StackPanel>
                <StackPanel x:Name="previewDisplay">
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <TextBlock Margin="5,0,0,0"
                                   Text="Offset Level:"
                                   HorizontalAlignment="Center"/>
                        <TextBox x:Name="keywordsbox"
                                 HorizontalAlignment="Left"
                                 Margin="10,0,0,0"
                                 TextWrapping="Wrap"
                                 Text="{Binding Offset}"
                                 VerticalAlignment="Top"
                                 Width="150"
                                 Height="20"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <!-- ***** Hàng 4: Border (OK / Cancel) ***** -->
        <Border x:Name="groupD"
                Grid.Row="4"
                Margin="10,5,10,5"
                CornerRadius="2"
                BorderBrush="LightGray"
                BorderThickness="0.5">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="5">
                <Button x:Name="OkBtn"
                        Margin="25,5,5,5"
                        Content="OK"
                        Width="80"
                        HorizontalAlignment="Center"
                        Background="WhiteSmoke"/>
                <Button x:Name="CancelBtn"
                        Margin="25,5,10,5"
                        Content="Cancel"
                        Width="80"
                        HorizontalAlignment="Center"
                        Background="WhiteSmoke"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
