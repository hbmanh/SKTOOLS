<Window x:Class="SKRevitAddins.Commands.LayoutsToDWG.LayoutsToDWGWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SHEETS TO DWG" Height="560" Width="400"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Logo -->
            <RowDefinition Height="Auto"/>
            <!-- Select Sheets -->
            <RowDefinition Height="Auto"/>
            <!-- Export Options -->
            <RowDefinition Height="Auto"/>
            <!-- Merge Filename -->
            <RowDefinition Height="Auto"/>
            <!-- Titleblock -->
            <RowDefinition Height="Auto"/>
            <!-- Export Mode -->
            <RowDefinition Height="Auto"/>
            <!-- Open After -->
            <RowDefinition Height="*"/>
            <!-- Spacer -->
            <RowDefinition Height="Auto"/>
            <!-- OK/Cancel -->
        </Grid.RowDefinitions>

        <!-- Logo -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0 0 0 10">
            <Image Width="30" Height="30"
                   Source="C:\ProgramData\Autodesk\Revit\Addins\2022\SKTools.bundle\Contents\Resources\Images\shinken.png"
                   Margin="0 0 5 0"/>
            <TextBlock Text="Shinken Group®" VerticalAlignment="Center" FontWeight="Bold" FontSize="14"/>
        </StackPanel>

        <!-- Select Sheets -->
        <Button Grid.Row="1" Content="SELECT SHEETS" Height="32" FontWeight="Bold"
                Background="#3399FF" Foreground="White"
                Click="OpenSheetSelectionDialog_Click" Margin="0 0 0 10"/>

        <!-- Export Options -->
        <GroupBox Grid.Row="2" Header="EXPORT OPTIONS" FontWeight="Bold" Margin="0 0 0 10">
            <StackPanel Margin="8">
                <StackPanel Orientation="Horizontal" Margin="0 0 0 5">
                    <TextBlock Text="Option" Width="100"/>
                    <ComboBox ItemsSource="{Binding ExportSetups}"
                              SelectedItem="{Binding SelectedExportSetup}"
                              Width="200"/>
                </StackPanel>
                <DockPanel>
                    <TextBlock Text="Path:" Width="100" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding ExportFolder}" Width="200" Margin="0 0 5 0"/>
                    <Button Content="…" Width="25" Command="{Binding BrowseFolderCmd}"/>
                </DockPanel>
            </StackPanel>
        </GroupBox>

        <!-- Merge Filename -->
        <Grid Grid.Row="3" Margin="8 0 0 10"
              Visibility="{Binding IsMergeMode, Converter={StaticResource BoolToVis}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="Merge Filename:" VerticalAlignment="Center"/>
            <TextBox Grid.Column="1" Text="{Binding MergedFilename}"/>
        </Grid>

        <!-- Titleblock Labels -->
        <GroupBox Grid.Row="4" Header="TITLEBLOCK LABELS" FontWeight="Bold" Margin="0 0 0 10">
            <StackPanel Margin="8">
                <StackPanel Orientation="Horizontal" Margin="0 0 0 5">
                    <TextBlock Text="Number Label:" Width="100"/>
                    <ComboBox ItemsSource="{Binding TitleblockParams}" SelectedItem="{Binding NumberLabel}" Width="200"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 0 0 5">
                    <TextBlock Text="Name Label:" Width="100"/>
                    <ComboBox ItemsSource="{Binding TitleblockParams}" SelectedItem="{Binding NameLabel}" Width="200"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Scale Label:" Width="100"/>
                    <ComboBox ItemsSource="{Binding TitleblockParams}" SelectedItem="{Binding ScaleLabel}" Width="200"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <!-- Export Mode -->
        <GroupBox Grid.Row="5" Header="EXPORT MODE" FontWeight="Bold" Margin="0 0 0 10">
            <StackPanel Margin="5">
                <RadioButton Content="Merge Sheets" GroupName="ExportMode" IsChecked="{Binding IsMergeMode}"/>
                <RadioButton Content="Per Sheet"    GroupName="ExportMode" IsChecked="{Binding IsPerSheetMode}"/>
            </StackPanel>
        </GroupBox>

        <!-- Open After Export -->
        <CheckBox Grid.Row="6" Content="Open folder after export" 
                  IsChecked="{Binding OpenAfterExport}" Margin="8 0 0 10"/>

        <!-- Spacer -->
        <Border Grid.Row="7"/>

        <!-- OK/Cancel -->
        <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="80" Margin="5" Background="#3399FF" Foreground="White" Click="Export_Click"/>
            <Button Content="Cancel" Width="80" Margin="5" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
