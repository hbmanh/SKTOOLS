<Window x:Class="LayoutsToDWG.Commands.LayoutsToDWGWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:LayoutsToDWG.Commands"
        Title="SHEETS TO DWG" Height="600" Width="420"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <local:EnumBooleanConverter x:Key="EnumBool"/>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Logo -->
        <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
            <Image Width="30" Height="30"
             Source="C:\ProgramData\Autodesk\Revit\Addins\2022\SKTools.bundle\Contents\Resources\Images\shinken.png"
             Margin="0 0 5 0"/>
            <TextBlock Text="Shinken Group®" VerticalAlignment="Center"
                 FontWeight="Bold" FontSize="14"/>
        </StackPanel>

        <!-- Main content -->
        <StackPanel Grid.Row="1" Orientation="Vertical" Spacing="10">
            <Button Content="SELECT SHEETS" Height="32" FontWeight="Bold"
              Background="#3399FF" Foreground="White"
              Click="OpenSheetSelectionDialog_Click"/>

            <!-- Export Setup -->
            <Border BorderBrush="#3399FF" BorderThickness="1" CornerRadius="3">
                <StackPanel Margin="8">
                    <TextBlock Text="EXPORT SETUP" FontWeight="Bold" Margin="0 0 0 5"/>
                    <ComboBox ItemsSource="{Binding ExportSetups}"
                    SelectedItem="{Binding SelectedExportSetup}"
                    Width="300"/>
                </StackPanel>
            </Border>

            <!-- Folder picker -->
            <Border BorderBrush="#3399FF" BorderThickness="1" CornerRadius="3">
                <DockPanel Margin="8">
                    <TextBox Text="{Binding ExportFolder}" Width="260" IsReadOnly="True"/>
                    <Button Content="..." Width="25"
                  Command="{Binding BrowseFolderCmd}"/>
                </DockPanel>
            </Border>

            <!-- Titleblock labels -->
            <Border BorderBrush="#3399FF" BorderThickness="1" CornerRadius="3">
                <StackPanel Margin="8">
                    <TextBlock Text="TITLEBLOCK LABELS" FontWeight="Bold" Margin="0 0 0 5"/>
                    <StackPanel Orientation="Horizontal" Margin="0 0 0 5">
                        <TextBlock Text="Number:" Width="100"/>
                        <ComboBox ItemsSource="{Binding TitleblockParams}"
                      SelectedItem="{Binding SelectedNumberParam}"
                      Width="200"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0 0 0 5">
                        <TextBlock Text="Name:" Width="100"/>
                        <ComboBox ItemsSource="{Binding TitleblockParams}"
                      SelectedItem="{Binding SelectedNameParam}"
                      Width="200"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Scale:" Width="100"/>
                        <ComboBox ItemsSource="{Binding TitleblockParams}"
                      SelectedItem="{Binding SelectedScaleParam}"
                      Width="200"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Export mode -->
            <Border BorderBrush="#3399FF" BorderThickness="1" CornerRadius="3">
                <StackPanel Margin="8">
                    <TextBlock Text="EXPORT MODE" FontWeight="Bold" Margin="0 0 0 5"/>
                    <RadioButton Content="Merge Sheets" GroupName="Mode"
                       IsChecked="{Binding ExportMode,
                                      Converter={StaticResource EnumBool},
                                      ConverterParameter=SingleFile}"
                       Margin="0 0 0 5"/>
                    <RadioButton Content="Per Sheet" GroupName="Mode"
                       IsChecked="{Binding ExportMode,
                                      Converter={StaticResource EnumBool},
                                      ConverterParameter=MultipleFiles}"/>
                </StackPanel>
            </Border>

            <CheckBox Content="Open folder after export"
                IsChecked="{Binding OpenAfterExport}"/>

            <TextBlock Text="{Binding StatusMessage}" Margin="0 10 0 0"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal"
                HorizontalAlignment="Right" Spacing="10">
            <Button Content="OK" Width="80" Click="Export_Click"
              Background="#3399FF" Foreground="White"/>
            <Button Content="CANCEL" Width="80" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
