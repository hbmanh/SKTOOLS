<Window x:Class="SKRevitAddins.Commands.LayoutsToDWG.SheetSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SHEET LIST" Height="600" Width="700"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Logo -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0 0 0 10">
            <Image Width="30" Height="30"
                   Source="C:\ProgramData\Autodesk\Revit\Addins\2022\SKTools.bundle\Contents\Resources\Images\shinken.png"
                   Margin="0 0 5 0"/>
            <TextBlock Text="Shinken Group®" VerticalAlignment="Center" FontWeight="Bold" FontSize="14"/>
        </StackPanel>

        <!-- Filters -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0 0 0 10">
            <TextBlock Text="From sheet set:" VerticalAlignment="Center" Margin="0 0 5 0"/>
            <ComboBox Width="200"
                      ItemsSource="{Binding SheetSets}"
                      SelectedItem="{Binding SelectedSheetSet}"/>
            <TextBlock Text="Orientation:" VerticalAlignment="Center" Margin="20 0 5 0"/>
            <RadioButton Content="Horizontal" GroupName="Ori" IsChecked="{Binding IsHorizontal}"/>
            <RadioButton Content="Vertical"   GroupName="Ori" IsChecked="{Binding IsVertical}" Margin="10 0 0 0"/>
        </StackPanel>

        <!-- Sheet list -->
        <DataGrid Grid.Row="2" ItemsSource="{Binding SelectionItems}"
                  AutoGenerateColumns="False" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="" Binding="{Binding IsSelected}" Width="40"/>
                <DataGridTextColumn Header="SHEET NAME" Binding="{Binding SheetName}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="80" Margin="5" Click="OK_Click"/>
            <Button Content="CANCEL" Width="80" Margin="5" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
