<Window x:Class="SKRevitAddins.LayoutsToDWG.LayoutsToDWGWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SHEETS TO DWG" Height="540" Width="400"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Logo -->
            <RowDefinition Height="Auto"/>
            <!-- Select Sheets -->
            <RowDefinition Height="Auto"/>
            <!-- Export Options -->
            <RowDefinition Height="Auto"/>
            <!-- File Name Structure -->
            <RowDefinition Height="Auto"/>
            <!-- Open After -->
            <RowDefinition Height="*"/>
            <!-- spacer -->
            <RowDefinition Height="Auto"/>
            <!-- OK/Cancel -->
        </Grid.RowDefinitions>

        <!-- Logo -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0 0 0 10">
            <Image Width="30" Height="30"
                   Source="C:\ProgramData\Autodesk\Revit\Addins\2022\SKTools.bundle\Contents\Resources\Images\shinken.png"
                   Margin="0 0 5 0"/>
            <TextBlock Text="Shinken Group®" VerticalAlignment="Center"
                       FontWeight="Bold" FontSize="14"/>
        </StackPanel>

        <!-- Select Sheets -->
        <Button Grid.Row="1" Content="SELECT SHEETS" Height="32" FontWeight="Bold"
                Background="#3399FF" Foreground="White"
                Click="OpenSheetSelectionDialog_Click" Margin="0 0 0 10"/>

        <!-- Export Options -->
        <GroupBox Grid.Row="2" Header="EXPORT OPTIONS" FontWeight="Bold" Margin="0 0 0 10">
            <StackPanel Margin="8">
                <StackPanel Orientation="Horizontal" Margin="0 0 0 5">
                    <TextBlock Text="Option" Width="100"/>
                    <ComboBox ItemsSource="{Binding ExportSetups}"
                              SelectedItem="{Binding SelectedExportSetup}"
                              Width="200"/>
                </StackPanel>
                <DockPanel Margin="0 0 0 5">
                    <TextBlock Text="Path:" Width="100" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding ExportFolder}" Width="200" Margin="0 0 5 0"/>
                    <Button Content="…" Width="25" Command="{Binding BrowseFolderCmd}"/>
                </DockPanel>

                <DockPanel Margin="0 0 0 5">
                    <Button Content="EXPORT LAYER SETTINGS"
                            Width="200" Height="23" Margin="50 0 0 0"
                            Command="{Binding ExportLayerSettingsCmd}"/>
                </DockPanel>
                
            </StackPanel>
        </GroupBox>

        <!-- File Name Structure -->
        <GroupBox Grid.Row="3" Header="FILE NAME STRUCTURE" FontWeight="Bold" Margin="0 0 0 10">
            <StackPanel Margin="8">
                <StackPanel Orientation="Horizontal" Margin="0 0 0 5">
                    <TextBlock Text="Prefix:" Width="100"/>
                    <TextBox Text="{Binding Prefix}" Width="200"
                             ToolTip="Ví dụ: NRT080-TAK-01-XX-M3"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0 0 0 5">
                    <TextBlock Text="Sheet Number:" Width="100"/>
                    <ComboBox ItemsSource="{Binding TitleblockParams}"
                              SelectedItem="{Binding SheetNumberParam}"
                              Width="200"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Sheet Name:" Width="100"/>
                    <ComboBox ItemsSource="{Binding TitleblockParams}"
                              SelectedItem="{Binding SheetNameParam}"
                              Width="200"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <!-- Open After -->
        <CheckBox Grid.Row="4" Content="Open folder after export"
                  IsChecked="{Binding OpenAfterExport}" Margin="8 0 0 10"/>

        <!-- spacer -->
        <Border Grid.Row="5"/>

        <!-- OK / Cancel -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK"     Width="80" Margin="5"
                    Background="#3399FF" Foreground="White"
                    Click="Export_Click"/>
            <Button Content="Cancel" Width="80" Margin="5"
                    Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
