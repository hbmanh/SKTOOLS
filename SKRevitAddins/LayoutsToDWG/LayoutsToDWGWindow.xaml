<Window x:Class="SKRevitAddins.LayoutsToDWG.LayoutsToDWGWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sheets To DWG"
        Height="760" Width="650"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <!--──────── Resources ───────────────────────────────────-->
    <Window.Resources>
        <!-- True/False → Visible/Collapsed -->
        <BooleanToVisibilityConverter x:Key="BoolVis"/>

        <!-- Style chung nút OK / Cancel -->
        <Style x:Key="DialogButtonStyle" TargetType="Button">
            <Setter Property="Width"  Value="90"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Margin" Value="2,0,0,0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#808080"/>
            <Setter Property="Background" Value="#E6E6E6"/>
            <Setter Property="Foreground" Value="Black"/>
            <Style.Triggers>
                <!-- riêng nút OK -->
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Name}"
                             Value="OkButton">
                    <Setter Property="Background"  Value="#3399FF"/>
                    <Setter Property="Foreground"  Value="White"/>
                    <Setter Property="BorderBrush" Value="#3399FF"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Màu dòng DataGrid -->
        <Style x:Key="BlueRowStyle" TargetType="DataGridRow">
            <Setter Property="Background" Value="#E6F3FF"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D3E9FF"/>
                </Trigger>
                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                    <Setter Property="Background" Value="#C1DFFF"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <!--──────── Layout chính ────────────────────────────────-->
    <Grid>
        <!-- nội dung cuộn -->
        <ScrollViewer>
            <StackPanel Margin="15">

                <!-- Header -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <Image Source="C:\ProgramData\Autodesk\Revit\Addins\2022\SKTools.bundle\Contents\Resources\Images\shinken.png"
                           Height="30" Width="24"/>
                    <TextBlock Text="Shinken Group®"
                               FontSize="20"
                               FontWeight="Bold"
                               Margin="10,0,0,0"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- SHEET SELECTION -->
                <GroupBox Header="SHEET SELECTION" FontWeight="Bold" Margin="0,5">
                    <StackPanel Margin="10">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="From sheet set:" Width="110" VerticalAlignment="Center"/>
                            <ComboBox ItemsSource="{Binding SheetSets}"
                                      SelectedItem="{Binding SelectedSheetSet}"
                                      Width="300"/>
                        </StackPanel>

                        <!-- Danh sách sheet -->
                        <DataGrid x:Name="SheetDataGrid"
                                  ItemsSource="{Binding SheetItems}"
                                  AutoGenerateColumns="False"
                                  Height="220"
                                  RowStyle="{StaticResource BlueRowStyle}"
                                  PreviewMouseLeftButtonDown="SheetDataGrid_PreviewMouseLeftButtonDown"
                                  MouseMove="SheetDataGrid_MouseMove"
                                  Drop="SheetDataGrid_Drop">
                            <DataGrid.Columns>
                                <DataGridCheckBoxColumn Binding="{Binding IsSelected}" Width="40"/>
                                <DataGridTextColumn Header="Sheet No." Binding="{Binding SheetNumber}" Width="100"/>
                                <DataGridTextColumn Header="Sheet Name" Binding="{Binding SheetName}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </GroupBox>

                <!-- EXPORT OPTIONS -->
                <GroupBox Header="EXPORT OPTIONS" FontWeight="Bold" Margin="0,10">
                    <StackPanel Margin="10">
                        <!-- Option -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Option" Width="110" VerticalAlignment="Center"/>
                            <ComboBox ItemsSource="{Binding ExportSetups}"
                                      SelectedItem="{Binding SelectedExportSetup}"
                                      Width="345" Height="25"/>
                        </StackPanel>
                        <!-- Path -->
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Path" Width="110" VerticalAlignment="Center"/>
                            <TextBox Text="{Binding ExportPath}" Width="345" Height="25" Margin="0,0,5,0"/>
                            <Button Width="85" Command="{Binding BrowseFolderCmd}">
                                <TextBlock FontSize="16" Text="..." HorizontalAlignment="Center"/>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <!-- FILE NAME STRUCTURE -->
                <GroupBox Header="FILE NAME STRUCTURE" FontWeight="Bold" Margin="0,0,0,10">
                    <StackPanel Margin="10">
                        <!-- Prefix -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Prefix:" Width="100"/>
                            <TextBox Text="{Binding Prefix}" Width="345" Margin="10,0,0,0"
                                     ToolTip="Ví dụ: NRT080-TAK-01-XX-M3"/>
                        </StackPanel>

                        <!-- Middle -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Middle:" Width="100"/>
                            <ComboBox ItemsSource="{Binding TitleblockParams}"
                                      SelectedItem="{Binding SheetNumberParam}"
                                      Width="345" Margin="10,0,0,0"/>
                        </StackPanel>

                        <!-- Ending -->
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Ending:" Width="100"/>
                            <ComboBox ItemsSource="{Binding TitleblockParams}"
                                      SelectedItem="{Binding SheetNameParam}"
                                      Width="345" Margin="10,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <!-- EXPORT LAYER SETTINGS -->
                <DockPanel Margin="0,0,0,10" HorizontalAlignment="Center">
                    <Button Content="EXPORT LAYER SETTINGS"
                            Width="200" Height="25" Margin="10,0"
                            Background="#3399FF" Foreground="White"
                            Command="{Binding ExportLayerCmd}"/>
                </DockPanel>

                <!-- Open folder -->
                <CheckBox Content="Open folder after export"
                          IsChecked="{Binding OpenFolderAfterExport}"
                          Margin="0,5,0,15" Width="576"/>

                <!-- OK & Cancel -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="OkButton"
                            Content="OK"
                            Style="{StaticResource DialogButtonStyle}"
                            Command="{Binding StartExportSheetsCmd}"/>
                    <Button Content="Cancel"
                            Style="{StaticResource DialogButtonStyle}"
                            Click="Cancel_Click"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Progress bar -->
        <ProgressBar Height="4" VerticalAlignment="Bottom"
                     IsIndeterminate="True"
                     Visibility="{Binding IsBusy, Converter={StaticResource BoolVis}}"/>
    </Grid>
</Window>
