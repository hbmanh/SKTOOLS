<Window x:Class="SKRevitAddins.Forms.ExportSchedulesToExcelWpfWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Export Schedules to Excel"
        Height="450" Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Topmost="True">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Row 0: Logo + Shinken Group® -->
        <StackPanel Orientation="Horizontal"
                    Grid.Row="0"
                    HorizontalAlignment="Left"
                    Margin="0,0,0,10">
            <Image Width="30" Height="30"
                   Source="C:\ProgramData\Autodesk\Revit\Addins\2022\SKTools.bundle\Contents\Resources\Images\shinken.png"
                   Stretch="UniformToFill"
                   Margin="0,0,5,0"/>
            <TextBlock Text="Shinken Group®"
                       VerticalAlignment="Center"
                       Foreground="Black"
                       FontWeight="Bold"
                       FontSize="12"/>
        </StackPanel>

        <!-- Row 1: Buttons -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Left">
            <Button Content="Select All" Width="80" Margin="5" Click="SelectAllBtn_Click"/>
            <Button Content="Deselect All" Width="100" Margin="5" Click="DeselectAllBtn_Click"/>
            <Button Content="Preview" Width="80" Margin="5" Click="PreviewBtn_Click"/>
            <Button x:Name="ExportWithoutPreviewBtn" Content="Export Without Preview" Width="150" Margin="5" Click="ExportWithoutPreviewBtn_Click"/>
        </StackPanel>

        <!-- Row 2: List of Schedules with CheckBox -->
        <ListBox x:Name="SchedulesListBox"
                 Grid.Row="2"
                 Margin="0,10,0,0"
                 ItemsSource="{Binding AvailableSchedules}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <!-- CheckBox liên kết TwoWay đến IsSelected -->
                        <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                  Click="ScheduleCheckbox_Click"/>
                        <TextBlock Text="{Binding Name}" Margin="5,0,0,0"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
