<Window x:Class="SKRevitAddins.Forms.PreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Preview Excel Data"
        Height="400" Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Topmost="True">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Row 0: Logo + Shinken Group® -->
        <StackPanel Orientation="Horizontal"
                    Grid.Row="0"
                    HorizontalAlignment="Left"
                    Margin="0,0,0,10">
            <Image Width="30" Height="30"
                   Source="C:\ProgramData\Autodesk\Revit\Addins\2022\SKTools.bundle\Contents\Resources\Images\shinken.png"
                   Stretch="UniformToFill"
                   Margin="0,0,5,0"/>
            <TextBlock Text="Shinken Group®"
                       VerticalAlignment="Center"
                       Foreground="Black"
                       FontWeight="Bold"
                       FontSize="12"/>
        </StackPanel>

        <!-- Row 1: DataGrid hiển thị ExcelPreviewData -->
        <DataGrid x:Name="ExcelPreviewDataGrid"
                  Grid.Row="1"
                  ItemsSource="{Binding ExcelPreviewData}"
                  AutoGenerateColumns="True"
                  IsReadOnly="False"
                  SelectionMode="Extended"
                  SelectionUnit="FullRow"
                  Margin="0,10,0,10"/>

        <!-- Row 2: Buttons Reset, Update, Cancel -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="ResetBtn" Content="Reset" Width="80" Margin="5" Click="ResetBtn_Click"/>
            <Button x:Name="UpdateBtn" Content="Update" Width="80" Margin="5" Click="UpdateBtn_Click"/>
            <Button x:Name="CancelBtn" Content="Cancel" Width="80" Margin="5" Click="CancelBtn_Click"/>
        </StackPanel>
    </Grid>
</Window>
